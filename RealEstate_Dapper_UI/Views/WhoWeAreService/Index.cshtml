@model List<RealEstate_Dapper_UI.Dtos.WhoWeAreDetailDtos.ResultWhoWeAreServiceDto>
@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/Admin/Index.cshtml";
	int count = 0;
}

<div class="container-fluid pt-4 px-4">
	<div class="row g-4">
		<div class="col-12">
			<div class="bg-light rounded h-100 p-4">
				<h6 class="mb-4">Biz Kimiz Servis</h6>
				<div class="table-responsive">
					<table class="table">
						<thead>
							<tr>
								<th scope="col">#</th>
								<th scope="col">İsim</th>
								<th scope="col">Durumu</th>
								<th scope="col">Sil</th>
								<th scope="col">Güncelle</th>
						</thead>
						<tbody>
							@foreach (var item in Model)
							{
								count++;
								<tr>
									<th scope="row">@count</th>
									<td>@item.ServiceName</td>
									<td>@item.ServiceStatus</td>
									<td><a href="/WhoWeAreService/DeleteWhoWeAreService/@item.WhoWeAreServiceID" class="btn btn-outline-danger">Sil</a></td>
									<td><a href="/WhoWeAreService/UpdateWhoWeAreService/@item.WhoWeAreServiceID" class="btn btn-outline-success">Güncelle</a></td>

								</tr>

							}

						</tbody>
					</table>
					<a href="/WhoWeAreService/CreateWhoWeAreService" class="btn btn-outline-dark">Biz Kimiz Servis Oluştur</a>

				</div>
			</div>
		</div>
	</div>
</div>

