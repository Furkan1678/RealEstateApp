<style>
	body {
		background-color: #121212; /* Genel dark arka plan */
		color: #e0e0e0;
		font-family: Arial, sans-serif;
	}

	.stat-card {
		background: linear-gradient(145deg, #1e1e1e, #2a2a2a);
		border: none;
		border-radius: 16px;
		padding: 20px;
		box-shadow: 0 4px 20px rgba(0,0,0,0.4);
		transition: all 0.3s ease;
	}

		.stat-card:hover {
			transform: translateY(-5px);
			box-shadow: 0 6px 30px rgba(0, 200, 255, 0.2);
		}

		.stat-card i {
			opacity: 0.9;
		}

		.stat-card p {
			margin-bottom: 4px;
			font-size: 0.9rem;
			color: #b0b0b0;
		}

		.stat-card h6 {
			color: #ffffff;
			font-size: 1.3rem;
		}
</style>

<div class="container-fluid pt-4 px-4">
	<div class="row g-4">
		<div class="col-sm-6 col-xl-3">
			<div class="stat-card d-flex align-items-center justify-content-between">
				<i class="fa fa-th-large fa-3x text-dark"></i>
				<div class="ms-3">
					<p>Toplam İlan Sayısı</p>
					<h6>@ViewBag.productCount</h6>
				</div>
			</div>
		</div>
		<div class="col-sm-6 col-xl-3">
			<div class="stat-card d-flex align-items-center justify-content-between">
				<i class="fa fa-user fa-3x text-primary"></i>
				<div class="ms-3">
					<p>En Fazla İlana Sahip Personel</p>
					<h6>@ViewBag.employeeNameByMaxProductCount</h6>
				</div>
			</div>
		</div>
		<div class="col-sm-6 col-xl-3">
			<div class="stat-card d-flex align-items-center justify-content-between">
				<i class="fa fa-globe-americas fa-3x text-success"></i>
				<div class="ms-3">
					<p>Toplam Kaç Farklı Şehir</p>
					<h6>@ViewBag.differentCityCount</h6>
				</div>
			</div>
		</div>
		<div class="col-sm-6 col-xl-3">
			<div class="stat-card d-flex align-items-center justify-content-between">
				<i class="fa fa-users fa-3x text-warning"></i>
				<div class="ms-3">
					<p>Aktif Personel</p>
					<h6>@ViewBag.activeEmployeeCount</h6>
				</div>
			</div>
		</div>
	</div>
</div>
