@model RealEstate_Dapper_UI.ViewModels.WhoWeAreViewModel
@*
    For more information on enabling MVC for empty projects, visit http://go.microsoft.com/fwlink/?LinkID=397860
*@
<section class="w3l-index3" id="about">
    <div class="midd-w3 pb-5">
        <div class="container pb-lg-5 pb-md-4 pb-2">
            <div class="row">
                <div class="col-lg-5 pr-lg-0">
                    <div class="w3l-left-img">
                    </div>
                </div>
                <div class="col-lg-7 pl-lg-0">
                    @foreach (var item in Model.WhoWeAreDetails)
                    {
                        <div class="w3l-right-info">
                            <h6 class="title-small">@item.Title</h6>
                            <h3 class="title-big">@item.SubTitle</h3>
                            <p class="mt-4">
                                @item.Description1
                            </p>
                            <p class="mt-3">
                                @item.Description2
                            </p>
                            @foreach (var item2 in Model.WhoWeAreServices)
                            {
                                <ul class="w3l-right-book w3l-right-book-grid mt-md-5 mt-4">
                                    <li><span class="fa fa-check" aria-hidden="@item2.ServiceStatus"></span>@item2.ServiceName</li>
                                    
                                </ul>
                            }
                           
                            <a href="#services" class="btn btn-style btn-primary mt-4">Discover our services</a>
                        </div>
                    }
                
                </div>
            </div>
        </div>
    </div>
</section>
